<install>
	<name>ofxPango</name>
	<version>0.01</version>
	<author>Diederick Huijbers</author>
	<author_website>http://www.roxlu.com</author_website>
	<code_url>https://github.com/roxlu/ofxPango</code_url>
	<site_url>http://www.roxlu.com</site_url>
	<download_url>https://github.com/roxlu/ofxPango/zipball/master</download_url>
	<forum_url></forum_url>
	<supported_os>
		<win>y</win>
    		<mac>y</mac>
    		<linux>n</linux>
    	</supported_os>
    	<has_example>y</has_example>
	<description><![CDATA[Enabling <a href="http://www.pango.org/">Pango</a> as an addon for openFrameworks to allow 
for some advanced text rendering.]]>
	</description>
	<url></url>
	<add>
		<include>
			
			<path>..\..\..\addons_diederick\ofxPango\src\</path>
			<path>..\..\..\addons_diederick\ofxPango\src\includes\</path>
			<path>..\..\..\addons_diederick\ofxPango\src\includes\cairo</path>
			<path>..\..\..\addons_diederick\ofxPango\src\includes\glib\</path>
			
		</include>
		
		<link>
			<lib os="win_cb" compiler="codeblocks">..\..\..\addons_diederick\ofxPango\src\libs\win\static\libpangocairo-1.0-0.dll</lib>
			<lib os="win_cb" compiler="codeblocks">..\..\..\addons_diederick\ofxPango\src\libs\win\static\libcairo-2.dll</lib>
			<lib os="win_cb" compiler="codeblocks">..\..\..\addons_diederick\ofxPango\src\libs\win\static\libpango-1.0-0.dll</lib>
			<lib os="win_cb" compiler="codeblocks">..\..\..\addons_diederick\ofxPango\src\libs\win\libgobject-2.0-0.dll</lib>
			
		</link>
	</add>
	
</install>

